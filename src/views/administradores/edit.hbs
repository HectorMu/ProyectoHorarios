{{>sidebar}}

<div id="content" class="">
  {{>navigation}}
  {{>message}}
  
  <div class="menu_info container mt-5">
    <div class="row">
      <div class="col-lg-4 col-md-6 col-12 mx-auto">
        <div class="card text-center">
          <div class="card-header">
            <h3>Editar administrador</h3>
          </div>
          
          <div class="card-body">
            <form action="/administradores/edit/{{a.id}}" method="POST">

              {{!-- INPUT 1 --}}
              <div class="form-group">
                <input
                  type="text"
                  name="nombre"
                  placeholder="Nombre"
                  class="form-control"
                  value="{{a.nombre}}"
                  required
                />
              </div>

              {{!-- INPUT 2 --}}
              <div class="form-group">
                <input
                  type="email"
                  name="correo"
                  placeholder="Correo"
                  class="form-control"
                  value="{{a.correo}}"
                  required
                />
              </div>
            
            {{!-- INPUT 3 --}}
              <div class="form-group">
                <input
                  type="password"
                  name="password"
                  placeholder="Nueva password"
                  class="form-control"
                  value=""
                  required
                />
              </div>

              {{!-- BOTON GUARDAR --}}
              <div class="form-group">
                <button class="btn btn-info btn-block">
                  Editar
                </button>
                <a href="/administradores" class="btn btn-danger btn-block">
                  Cancelar
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/index.js"></script>