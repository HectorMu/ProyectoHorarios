{{>sidebar}}

<div id="content" class="">
  {{>navigation}}
  {{>message}}
  
  <div class="menu_info container mt-5">
    <div class="row">
      <div class="col-lg-4 col-md-6 col-12 mx-auto">
        <div class="card text-center">
          <div class="card-header">
            <h3>Editar maestro</h3>
          </div>
          
          <div class="card-body">
            <form action="/maestros/editarM/{{m.id}}" method="POST">

              {{!-- INPUT 2 --}}
              <div class="form-group">
                <input
                  type="text"
                  name="nombre"
                  placeholder="Nombre"
                  class="form-control"
                  value="{{m.nombre}}"
                  required
                />
              </div>

                {{!-- INPUT 3 --}}
              <div class="form-group">
                <input
                  type="text"
                  name="academia"
                  placeholder="Academia"
                  class="form-control"
                  value="{{m.academia}}"
                  required
                />
              </div>

              {{!-- BOTON GUARDAR --}}
              <div class="form-group">
                <button class="btn btn-info btn-block">
                  Editar
                </button>
              </div>
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/index.js"></script>